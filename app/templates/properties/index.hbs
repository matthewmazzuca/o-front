



<div class="container list-page index">
	<div class="search-bar">
    <img src='img/search-icon.png'>
    {{input placeholder='Search an address or something'}}	
	</div>
{{#each property in model}}

{{#link-to 'properties.property.index' property.id}} <!-- make clickable once component -->

  <div class="listpage-listing property" {{bind-attr style=property.styleString}}>
  
   <div class="edit-button">
      {{#link-to 'properties.property.edit' property}}
        Edit Property
      {{/link-to}}
    </div>

    <div class='listing-main'>
      <span class='name'>
        {{property.address}}
      </span>

      <div class="property-subheading">
           <!-- <span>Toronto, On</span> reinsert if launched in multiple cities-->
           <span> 
            {{property.location}}
           </span>
      </div>
		</div>

    <div class='listing-footer'>
      <div class="right-listing wait-list">
        <img src='img/compass-icon.png'>
      </div>
			<div class="left-listing distance">
        +	{{calculatedDistance}} from here
			</div>
		</div>


<hr class="divider"/>

  </div>
  {{/link-to}}
	{{/each}}
</div>


{{#if session.isAuthenticated}}

  <div class="new-property">
  	{{#link-to 'properties.new'}}
  		ADD A PROPERTY
  	{{/link-to}}
  </div>
{{/if}}
