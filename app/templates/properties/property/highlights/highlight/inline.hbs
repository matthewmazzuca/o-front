<div class="app-card highlight-card" style={{highlight.style}}>
	<div class="edit-app-icon">
		{{#link-to 'properties.property.highlights.highlight.edit' highlight.id}}
			<span><img src="img/edit-icon.png"></span>
		{{/link-to}}
	</div>

  <div class="highlight-content">
    <div class="highlight-title">
      {{highlight.name}}
    </div>

    <div class="highlight-subtitle">
      {{highlight.sub_heading}}
    </div>

  </div>
</div>
