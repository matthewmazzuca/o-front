<div class="websitelogo">
  <img src="img/websitelogo.png">
</div>

<div class="register-settings">
  <div class="register-setting">
      {{input
        value=identification
        placeholder="Email"}}
    

    <div class="form-validator">
      {{#if errors.identification}}
        email {{errors.identification}}
      {{/if}}
    </div>
  </div>

  <div class="register-setting">
      {{input
        value=password type="password"
        placeholder="Password"}}


    <div class="form-validator">
      {{#if errors.password}}
        password {{errors.password}}
      {{/if}}
    </div>
  </div>

  <div class="save-container">
    <button class="button"
      {{action "authenticate"}}
      {{bind-attr disabled="isInvalid"}} >
      Sign In
    </button>
  </div>
</div>

