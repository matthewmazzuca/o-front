<div {{bind-attr class="controllers.application.navVisible:visible :nav"}}>

	<div class="avatar">
  	<img src="img/avatar.png">
  </div>

  <div class="property">
  	<div class="property-name">
  		{{property.address}}
  	</div>

  	<div class="property-location">
  		{{property.location}}
  	</div>
  </div>

	<ul >
		{{#each item in nav_links}}
		  <li class="nav-li">
		 		{{#link-to item.route}}
		  		<img class="icon" {{bind-attr src=item.icon}}>
		  		{{item.title}}
		  	{{/link-to}}
		  </li>
		{{/each}}
	</ul>

	{{#if controller.controllers.application.activeProperty}}
		{{partial 'nav/admin-navigation'}}
	{{/if}}

	<div class="nav-spacer"></div>
	<div class="nav-spacer"></div>
	<div class="nav-spacer"></div>
	<div class="nav-spacer"></div>

</div>