<div class="page-title">
  {{model.name}}
</div>

<div class="container property-settings">

  <div class="property-setting">
    <div class="setting-title"> Heading </div>
    <div class="setting">
      {{render 'editable-inline' model.name}}
    </div>
  </div>

  <div class="property-setting">
    <div class="setting-title"> Subheading </div>
    <div class="setting">
      {{render 'editable-inline' model.sub_heading}} 
    </div>
  </div>
  
  <div class="property-setting">
    <div class="title"> Add more options </div>
    <div class="setting sub-text">
      e.g. Bedrooms: 2
      <button {{action "newField"}}> <img src="img/new-property-icon.png"> </button>
    </div>
  </div>

  {{#each option in model.options}}
    <div class="property-setting">
      {{input value=option.name}}
      <div class="setting">
        <img src={{option.image_url}}>
      </div>
    </div>
  {{/each}}

  <div class="property-setting">
    {{input value=newFieldName placeholder="e.g. \"Granite countertops\""}}
    <div class="setting new-field-setting">
      <img src="img/new-property-icon.png">
    </div>
  </div>

  <div class="save-container">
    <button class="button" {{action "save"}}> Save </button>
  </div>
</div>